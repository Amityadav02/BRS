<table>
  <tr>
    <th>Bus Name</th>
    <th>Registration No.</th>
    <th>Source</th>
    <th>Destination</th>
    <th>Total Seats</th>
  </tr>
  <% @buses.each do |bus| %>
    <tr>
      <td><%= link_to bus.name, bus %></td>
      <td><%= bus.registration %></td>
      <td><%= bus.source %></td>
      <td><%= bus.destination %></td>
      <td><%= bus.total_seats %></td>
    </tr>
  <% end %>
</table>
<style>
  table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
  }
  table {
    width: 100%
  }
  td { 
    text-align: center
  }
</style>

<section class="admin">
  <%= link_to "Add New Bus", new_bus_path, class: "button" %>
</section>
